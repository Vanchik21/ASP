@model IEnumerable<vanchik21Car.Models.MaintenanceRecord>
    @{
 ViewData["Title"] = "Maintenance";
 var vehicleId = ViewBag.VehicleId as long?;
 var vehicles = ViewBag.Vehicles as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
    }
    <div class="container my-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="m-0">Maintenance</h2>
            <a class="btn btn-primary" asp-action="Create" asp-route-vehicleId="@vehicleId">Add Record</a>
        </div>

        <form class="row g-2 mb-3" method="get">
            <div class="col-auto">
                <select class="form-select" name="vehicleId" onchange="this.form.submit()">
                    <option value="">All Vehicles</option>
                    @foreach (var v in vehicles)
 {
                    <option value="@v.VehicleID" selected="@(vehicleId == (long)v.VehicleID)">@v.Title</option>
 }
                </select>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Vehicle</th>
                        <th>Date</th>
                        <th>Description</th>
                        <th class="text-end">Cost</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
 {
                    <tr>
                        <td>@item.Vehicle.Make @item.Vehicle.Model (@item.Vehicle.LicensePlate)</td>
                        <td>@item.PerformedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@item.Description</td>
                        <td class="text-end">@item.Cost.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</td>
                    </tr>
 }
                </tbody>
            </table>
        </div>
    </div>
