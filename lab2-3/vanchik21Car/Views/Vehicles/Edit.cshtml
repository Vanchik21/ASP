@model vanchik21Car.Models.Vehicle
@{
 ViewData["Title"] = "Edit Vehicle";
}
<div class="container my-4">
 <h2 class="mb-3">Edit Vehicle</h2>
 <form asp-action="Edit" method="post" class="row g-3">
 <input type="hidden" asp-for="VehicleID" />
 <div class="col-md-6">
 <label asp-for="Make" class="form-label"></label>
 <input asp-for="Make" class="form-control" />
 <span asp-validation-for="Make" class="text-danger"></span>
 </div>
 <div class="col-md-6">
 <label asp-for="Model" class="form-label"></label>
 <input asp-for="Model" class="form-control" />
 <span asp-validation-for="Model" class="text-danger"></span>
 </div>
 <div class="col-md-4">
 <label asp-for="Year" class="form-label"></label>
 <input asp-for="Year" class="form-control" />
 </div>
 <div class="col-md-4">
 <label asp-for="VIN" class="form-label"></label>
 <input asp-for="VIN" class="form-control" />
 </div>
 <div class="col-md-4">
 <label asp-for="LicensePlate" class="form-label"></label>
 <input asp-for="LicensePlate" class="form-control" />
 </div>
 <div class="col-md-6">
 <label asp-for="Category" class="form-label"></label>
 <input asp-for="Category" class="form-control" />
 </div>
 <div class="col-md-6">
 <label asp-for="DailyRate" class="form-label"></label>
 <input asp-for="DailyRate" class="form-control" />
 </div>
 <div class="col-md-6">
 <label asp-for="Status" class="form-label"></label>
 <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<vanchik21Car.Models.VehicleStatus>()"></select>
 </div>
 <div class="col-12">
 <button type="submit" class="btn btn-primary">Save</button>
 <a asp-action="Index" class="btn btn-secondary">Cancel</a>
 </div>
 </form>
</div>
