@model Carsharing.Models.MaintenanceRecord
@{
 ViewData["Title"] = "Maintenance Details";
}
<div class="container my-4">
    <h2 class="mb-3">Maintenance Details</h2>
    <dl class="row">
        <dt class="col-sm-3">Vehicle</dt>
        <dd class="col-sm-9">@Model.Vehicle?.Make @Model.Vehicle?.Model (@Model.Vehicle?.LicensePlate)</dd>
        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.PerformedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</dd>
        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>
        <dt class="col-sm-3">Cost</dt>
        <dd class="col-sm-9">@Model.Cost.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</dd>
        <dt class="col-sm-3">Performed By</dt>
        <dd class="col-sm-9">@Model.PerformedBy</dd>
    </dl>
    <div class="mt-3">
        <a asp-action="Index" asp-route-vehicleId="@Model.VehicleID" class="btn btn-secondary">Back</a>
        <a asp-action="Edit" asp-route-id="@Model.MaintenanceRecordID" class="btn btn-primary">Edit</a>
    </div>
</div>
