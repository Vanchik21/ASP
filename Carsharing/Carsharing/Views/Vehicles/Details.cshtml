@model Carsharing.Models.Vehicle
@{
 ViewData["Title"] = "Vehicle Details";
}
<div class="container my-4">
    <h2 class="mb-3">@Model.Make @Model.Model (@Model.Year)</h2>
    <dl class="row">
        <dt class="col-sm-3">VIN</dt>
        <dd class="col-sm-9">@Model.VIN</dd>
        <dt class="col-sm-3">License Plate</dt>
        <dd class="col-sm-9">@Model.LicensePlate</dd>
        <dt class="col-sm-3">Category</dt>
        <dd class="col-sm-9">@Model.Category</dd>
        <dt class="col-sm-3">Daily Rate</dt>
        <dd class="col-sm-9">@Model.DailyRate.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</dd>
        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
        <dt class="col-sm-3">Created</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime()</dd>
        <dt class="col-sm-3">Updated</dt>
        <dd class="col-sm-9">@Model.UpdatedAt?.ToLocalTime()</dd>
    </dl>

    <h4 class="mt-4">Maintenance Records</h4>
    @if (Model.MaintenanceRecords?.Any() == true)
 {
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Description</th>
                    <th class="text-end">Cost</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model.MaintenanceRecords.OrderByDescending(x => x.PerformedAt))
 {
                <tr>
                    <td>@m.PerformedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@m.Description</td>
                    <td class="text-end">@m.Cost.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</td>
                </tr>
 }
            </tbody>
        </table>
    </div>
 }
 else
 {
    <p class="text-muted">No maintenance records.</p>
 }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>
