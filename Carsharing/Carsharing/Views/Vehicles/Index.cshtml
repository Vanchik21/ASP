@model IEnumerable<Carsharing.Models.Vehicle>
    @{
    ViewData["Title"] = "Vehicles";
    }
    <div class="container my-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="m-0">Vehicles</h2>
            @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
        {
            <a asp-action="Create" class="btn btn-primary">Create Vehicle</a>
        }
        </div>
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Make</th>
                        <th>Model</th>
                        <th>Year</th>
                        <th>Category</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var v in Model)
                {
                    <tr>
                        <td>@v.Make</td>
                        <td>@v.Model</td>
                        <td>@v.Year</td>
                        <td>@v.Category</td>
                        <td>@v.Status</td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@v.VehicleID" class="btn btn-sm btn-outline-secondary">Details</a>
                            @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                            {
                            <a asp-action="Edit" asp-route-id="@v.VehicleID" class="btn btn-sm btn-outline-primary">Edit</a>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                            <a asp-action="Delete" asp-route-id="@v.VehicleID" class="btn btn-sm btn-outline-danger">Delete</a>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
