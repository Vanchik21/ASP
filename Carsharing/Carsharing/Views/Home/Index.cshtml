@model Carsharing.Models.ViewModels.VehicleListViewModel

<div class="bg-light p-4 mb-4 rounded">
    <div class="container">
        <h1 class="display-6">Welcome to Carsharing</h1>
        <p class="lead text-muted">Find and rent the perfect vehicle for your journey</p>
    </div>
</div>

<div class="container-fluid ps-0 my-4">
    <div class="row g-4">
        <aside class="col-12 col-md-3">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">Categories</h5>
                </div>
                <div class="card-body p-0">
                    @await Component.InvokeAsync("NavigationMenu")
                </div>
            </div>

            @if (User.Identity?.IsAuthenticated == true)
     {
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Quick Links</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a class="list-group-item list-group-item-action" asp-controller="Vehicles" asp-action="Index">
                        All Vehicles
                    </a>
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
      {
                    <a class="list-group-item list-group-item-action" asp-controller="Maintenance" asp-action="Index">
                        Maintenance
                    </a>
    }
                </div>
            </div>
  }
        </aside>

        <section class="col-12 col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
                <h2 class="m-0">Available Vehicles</h2>
                <span class="badge bg-secondary">
                    Page @Model.PagingInfo.CurrentPage of @Model.PagingInfo.TotalPages
                    (@Model.PagingInfo.TotalItems vehicles)
                </span>
            </div>

            @if (Model.Vehicles != null && Model.Vehicles.Any())
     {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach (var p in Model.Vehicles)
       {
                <partial name="VehicleSummary" model="p" />
      }
            </div>
    }
   else
   {
            <div class="alert alert-info">
                <h4>No vehicles available</h4>
                <p>Please check back later or adjust your filters.</p>
            </div>
      }

            @if (Model.PagingInfo.TotalPages > 1)
       {
            <nav class="pager-1line mt-4" aria-label="Vehicle pages">
                <ul class="pagination pagination-sm justify-content-center"
                    page-model="@Model.PagingInfo"
                    page-action="Index"
                    page-classes-enabled="true"
                    page-item-class="page-item"
                    page-item-class-selected="active"
                    page-item-class-disabled="disabled"
                    page-link-class="page-link"
                    page-url-category="@(Model.CurrentCategory ?? "")">
                </ul>
            </nav>
 }
        </section>
    </div>
</div>

