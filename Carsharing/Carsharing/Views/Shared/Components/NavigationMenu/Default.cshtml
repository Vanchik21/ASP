@model IEnumerable<string>
    @{
    var selected = ViewBag.SelectedCategory as string;
    }
    <div class="list-group list-group-flush">
        <a class="list-group-item list-group-item-action @(string.IsNullOrEmpty(selected) ? "active" : "")"
           asp-controller="Home" asp-action="Index">
            All Categories
        </a>
        @foreach (var c in Model)
    {
        <a class="list-group-item list-group-item-action @(selected == c ? "active" : "")"
           asp-controller="Home" asp-action="Index" asp-route-category="@c">
            @c
        </a>
    }
    </div>
